Source: libfsif
Section: libs
Priority: extra
Maintainer: Ivan Gagis <igagis@gmail.com>
Build-Depends: g++ (>=4:4.8), debhelper (>= 9),
		clang-tidy,
		clang-format,
		prorab,
		prorab-extra,
		myci,
		libz-dev,
		libutki-dev (>= 1.1.138)
Build-Depends-Indep: doxygen
Standards-Version: 3.9.2

Package: libfsif$(soname)
Section: libs
Architecture: any
Depends:
	${shlibs:Depends},
	${misc:Depends}
Description: cross-platform C++ file system library.
	File system abstraction library.

Package: libfsif-dbg$(soname)
Section: libs
Architecture: any
Depends:
	${shlibs:Depends},
	${misc:Depends}
Description: cross-platform C++ file system library.
	Debug version of libfsif.

Package: libfsif$(soname)-dbgsrc
Section: debug
Architecture: all
Depends:
	libfsif$(soname)-dbgsym (= ${binary:Version}),
	libfsif-dbg$(soname)-dbgsym (= ${binary:Version}),
	${misc:Depends}
Description: debugging sources for libfsif$(soname) package.

Package: libfsif-dev
Section: libdevel
Architecture: any
Depends:
	libfsif$(soname) (= ${binary:Version}),
	libfsif-dbg$(soname) (= ${binary:Version}),
	${misc:Depends},
	libutki-dev
Suggests: libfsif-doc
Description: cross-platform C++ file system library.
 File system abstraction library.

Package: libfsif-doc
Section: doc
Architecture: all
Depends: ${misc:Depends}
Description: documentation for libfsif - file system abstraction library.
 For more details see description to libfsif-dev package.
