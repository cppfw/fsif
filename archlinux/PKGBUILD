# Maintainer: Ivan Gagis <igagis@gmail.com>

pkgname=papki
pkgver=$PACKAGE_VERSION
pkgrel=1
arch=('x86_64' 'armv7h' 'aarch64')
epoch=
pkgdesc="file system abstraction library in C++"
#arch=('any') #defined above
url="http://github.com/cppfw/${pkgname}"
license=('MIT')
groups=()

depends=("utki" "zlib")

makedepends=(
	'myci'
	'prorab'
	'prorab-extra'
	'doxygen'
	"clang" # for clang-tidy and clang-format
)
checkdepends=('myci')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=() # Do not download any sources
noextract=()
md5sums=()
validpgpkeys=()

rootDir=$(pwd)/.. # project root directory

prepare() {
	cd "$rootDir"
}

build() {
	cd "$rootDir"
	make lint=off
}

check() {
	cd "$rootDir"
	make test
}

package() {
	cd "$rootDir"
	make DESTDIR="$pkgdir" PREFIX=/usr install
}
