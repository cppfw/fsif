	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"problemMatcher": [
				"$gcc"
			],
			"group":"build"
		},
		{
			"label": "build_dbg",
			"type": "shell",
			"command": "make config=dbg",
			"problemMatcher": [
				"$gcc"
			],
			"group":"build"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": [],
			"group":"build"
		},
		{
			"label": "clean_dbg",
			"type": "shell",
			"command": "make clean config=dbg",
			"problemMatcher": [],
			"group":"build"
		},
		{
			"label": "test_",
			"type": "shell",
			"command": "make test",
			"problemMatcher": [],
			"dependsOn": "build",
			"group": "build"
		},
		{
			"label": "test_dbg",
			"type": "shell",
			"command": "make test config=dbg",
			"problemMatcher": [],
			"dependsOn": "build_dbg",
			"group": "build"
		}
	]
}